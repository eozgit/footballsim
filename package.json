{
  "name": "footballsimulationengine",
  "version": "4.0.0",
  "description": "an engine for simulating football matches",
  "main": "dist/engine.js",
  "types": "dist/engine.d.ts",
  "scripts": {
    "start": "node engine.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest run",
    "test:bail": "vitest run --bail 1",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --coverage.reportsDirectory ./coverage/test/",
    "test:coverage:open": "npm run test:coverage; xdg-open ./coverage/test/index.html",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "type-check:coverage": "typescript-coverage-report -o ./coverage/type/ --ignore-files 'coverage/**'",
    "type-check:coverage:open": "npm run type-check:coverage && xdg-open coverage/type/index.html",
    "coverage:all": "npm run test:coverage && npm run type-check:coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GallagherAiden/footballSimulationEngine"
  },
  "keywords": [
    "football",
    "football simulation",
    "football engine",
    "football simulation engine",
    "soccer",
    "soccer simulation",
    "soccer engine",
    "soccer simulation engine",
    "simulation",
    "game",
    "football manager",
    "footie",
    "football management"
  ],
  "author": "Aiden Gallagher <aiden.g@live.co.uk>",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "dependency-cruiser": "^17.3.5",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "semantic-ui-react": "^2.1.5",
    "ts-migrate": "^0.1.35",
    "ts-morph": "^27.0.2",
    "type-coverage": "^2.29.7",
    "typescript": "^5.9.3",
    "typescript-coverage-report": "^1.1.1",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "type": "module"
}
