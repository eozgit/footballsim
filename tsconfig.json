{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    //"noEmit": true
    "declaration": true /* Generates the .d.ts files your client needs */,
    "declarationMap": true /* Allows "Go to Definition" to jump to your TS source */,
    "sourceMap": true /* Crucial for debugging */
  },
  "include": [
    "lib/**/*",
    "engine.ts", // Changed to .ts for post-rename
    "test/**/*",
    "init_config/**/*"
  ],
  "exclude": ["node_modules", "**/node_modules/*", "dist", "coverage"]
}
