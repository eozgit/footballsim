{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    //"noEmit": true
    "declaration": true /* Generates the .d.ts files your client needs */,
    "declarationMap": true /* Allows "Go to Definition" to jump to your TS source */,
    "sourceMap": true /* Crucial for debugging */,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "init_config/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "coverage",
    "src/**/*.test.ts",
    "src/test/**/*"
  ]
}
